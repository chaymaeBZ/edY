
<div class="ui tall stacked segment">
 <h2 class="ui header"><%= @session.title %><div class="ui tag labels" style="display:inline;margin-left: 50px;">
  <a class="ui label">
    <% if @session.price.nil? or @session.price == 0 %>
      <%= "Free" %>
    <% else %>
      <%= "$"+@session.price.to_s %>
    <% end %>
  </a></div></h2>
  <div style="color: grey; font: light italic"><%= @session.start_date.to_s + " - " + @session.end_date.to_s %></div>
  <p style="margin:40px 20px; spacing: 0.2em;font-size: 20px;"><%= @session.description %></p> 
  <p style="margin:40px 20px; spacing: 0.2em;font-size: 15px;">Courses you'll take during the session : <br/>
  <div class="ui list" style="margin-left: 20px;margin-top: -20px;">
    <% @courses.each do |course| %>
      <div class="item">
        <i class="checked calendar icon"></i>
        <div class="content">
          <%= course.title %>
        </div>
      </div>  
    <% end %>
   </div> 
       
  </p>
  <%= link_to "Buy Now !", new_charge_path(:id => @session.id), class: "ui positive button", style: "margin-top: 30px; margin-left: 20px;" %>



</div>
