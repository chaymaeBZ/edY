<div class="form container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'ui form', method: :post }) do |f| %>

  <h2 class="ui dividing header">Forgot your password?</h2>
  <div class="error messages">
    <%= devise_error_messages! %>
  </div>
  <div class="field <%= 'error' if resource.errors[:email].any? %>">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'ui fluid blue button' %>
  </div>
<% end %>

<div style="margin: 40px;"></div>
<%= render "devise/shared/links" %>
</div>
