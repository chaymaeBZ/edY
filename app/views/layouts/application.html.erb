<!DOCTYPE html>
<html>
  <head>
    <title>EdY</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="<%= wrapper_except_home %>" >
      <% if notice %><div class="ui raised secondary inverted blue segment notice"><%= notice %></div><% end %>   
      <% if alert %><div class="ui raised secondary inverted red segment alert"><%= alert %></div><% end %>
      <%= render 'layouts/navbar' %>
      <%= yield %>
    </div>
  </body>
</html>
